<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddCircleActivity">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:padding="5dp">

        <EditText
            android:id="@+id/edGroupName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:hint="Group name"
            android:singleLine="true" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ic_error" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <com.drivingschool.android.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/suggestes_group_names"
            android:padding="8dp"
            android:textAppearance="@style/TextViewBold"
            android:textSize="@dimen/_12sdp"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/innerLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnFriend"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Friends"
                    android:textSize="@dimen/_13sdp"
                    android:layout_margin="10dp"
                    android:textColor="@color/blue"
                    android:textAppearance="@style/TextViewBold"
                    android:background="@drawable/round_bd"/>

                <Button
                    android:id="@+id/btnSibling"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Siblings"
                    android:textColor="@color/blue"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/_13sdp"
                    android:textAppearance="@style/TextViewBold"
                    android:background="@drawable/round_bd"/>


                <Button
                    android:id="@+id/btnFamily"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Family"
                    android:textColor="@color/blue"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/_13sdp"
                    android:textAppearance="@style/TextViewBold"
                    android:background="@drawable/round_bd"/>

                <Button
                    android:id="@+id/btnSpecial"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="Special Someones"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/_13sdp"
                    android:textAppearance="@style/TextViewBold"
                    android:background="@drawable/round_bd"/>

                <Button
                    android:id="@+id/btnVacation"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Vacation Group"
                    android:layout_margin="10dp"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_13sdp"
                    android:textAppearance="@style/TextViewBold"
                    android:background="@drawable/round_bd"/>


            </LinearLayout>


        </HorizontalScrollView>


        <com.drivingschool.android.customviews.CustomTextView
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"/>

    </LinearLayout>

</RelativeLayout>