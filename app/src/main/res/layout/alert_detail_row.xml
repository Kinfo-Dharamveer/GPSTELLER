<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.drivingschool.android.customviews.CustomTextView
            android:id="@+id/driver_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:drawableLeft="@drawable/greencir"
            android:drawablePadding="5dp"
            android:text="Driver"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <com.drivingschool.android.customviews.CustomTextView
            android:id="@+id/alert_cat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Warn"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <com.drivingschool.android.customviews.CustomTextView
            android:id="@+id/alert_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="No Activity Recorded"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <com.drivingschool.android.customviews.CustomTextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Sun, 14 Oct"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

      <!--  <com.drivingschool.android.customviews.CustomTextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Active"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />-->

        <com.drivingschool.android.customviews.CustomTextView
            android:id="@+id/alert_det"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Details"
            android:backgroundTint="@color/blue"
            android:background="@drawable/round_layout_green"
            android:textColor="@color/white"
            android:textSize="@dimen/_9sdp" />


    </LinearLayout>



</RelativeLayout>