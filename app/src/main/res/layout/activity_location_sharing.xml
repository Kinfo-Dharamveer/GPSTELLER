<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.LocationSharingActivity">


    <LinearLayout
        android:id="@+id/leftLayou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewLoc"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/image_pic"
            app:civ_border_color="#faf9f9"
            app:civ_border_width="3dp"
            android:layout_gravity="bottom|center_horizontal"/>

        <com.drivingschool.android.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:layout_gravity="center"
            android:textSize="@dimen/_13sdp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_toRightOf="@id/leftLayou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <com.drivingschool.android.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_location_sharing"
            android:textColor="@color/black"
            android:textAppearance="@style/TextViewBold"
            android:textSize="@dimen/_15sdp"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Job"
            android:textSize="@dimen/_13sdp"
            android:checked="true"
            />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Family"
            android:textSize="@dimen/_13sdp"
            />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Group"
            android:textSize="@dimen/_13sdp"
            android:checked="true"
            />


    </LinearLayout>


</RelativeLayout>