<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/black">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@drawable/family" />

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <com.drivingschool.android.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="GPS TELLER DRIVER PROTEXT"
            android:textAppearance="@style/TextViewBold"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <com.drivingschool.android.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Includes all Plus features"
            android:textAppearance="@style/TextViewBold"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="@color/white"
            />

        <com.drivingschool.android.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="High Speed"
            android:textAppearance="@style/TextViewBold"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <com.drivingschool.android.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Phone Use"
            android:textAppearance="@style/TextViewBold"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <com.drivingschool.android.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:text="Weekly Drive Summary"
            android:textAppearance="@style/TextViewBold"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_10sdp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_backward"
            />

        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            />




    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <com.drivingschool.android.customviews.CustomTextView
            android:id="@+id/txtViewDetailsSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="View details"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textAppearance="@style/TextViewBold"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/round_layout_border">

            <com.drivingschool.android.customviews.CustomTextView
                android:id="@+id/txtLeftSec"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:text="320.15/mo"
                android:textAppearance="@style/TextViewMedium"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/_12sdp" />

            <com.drivingschool.android.customviews.CustomTextView
                android:id="@+id/txtRightSec"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:background="@drawable/round_bg_white"
                android:text="12 months for 200.71/mo"
                android:textAppearance="@style/TextViewMedium"
                android:textColor="@color/green"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <com.drivingschool.android.customviews.CustomTextView
            android:id="@+id/btn_payment2"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_layout_green"
            android:text="Start 7-Day Free Trial"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:drawableTint="@color/green"
            android:textAppearance="@style/TextViewMedium"
            android:textColor="@color/white"
            android:padding="10dp"/>

    </LinearLayout>

</RelativeLayout>
