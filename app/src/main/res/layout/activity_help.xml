<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.HelpActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_20sdp"
            android:background="@color/lightgrey"
            android:layout_centerInParent="true"
            android:padding="@dimen/_20sdp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/add_emergency_contacts"
                android:textAppearance="@style/TextViewBold"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="@string/if_anyone"
                android:textAppearance="@style/TextViewMedium"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="@dimen/_70sdp"
                            android:padding="2dp"
                            android:background="@drawable/circle"
                            android:src="@drawable/ic_person"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_margin="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitStart"
                            android:layout_marginRight="0dp"
                            android:padding="2dp"
                            android:backgroundTint="@color/blue"
                            android:background="@drawable/plus"
                            android:gravity="center"
                            android:minWidth="17sp"
                            android:adjustViewBounds="true"
                            android:minHeight="17sp"
                            android:paddingBottom="1dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="0"
                            android:textColor="#ffffffff"
                            android:textSize="12sp"
                            android:visibility="visible"
                            android:layout_gravity="center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <com.drivingschool.android.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact 1"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextViewMedium"
                        android:textSize="@dimen/_13sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp">

                        <ImageView
                            android:layout_width="@dimen/_70sdp"
                            android:padding="2dp"
                            android:background="@drawable/circle"
                            android:src="@drawable/ic_person"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_margin="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitStart"
                            android:layout_marginRight="0dp"
                            android:padding="2dp"
                            android:backgroundTint="@color/blue"
                            android:background="@drawable/plus"
                            android:gravity="center"
                            android:minWidth="17sp"
                            android:adjustViewBounds="true"
                            android:minHeight="17sp"
                            android:paddingBottom="1dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="0"
                            android:textColor="#ffffffff"
                            android:textSize="12sp"
                            android:visibility="visible"
                            android:layout_gravity="center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <com.drivingschool.android.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact 2"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextViewMedium"
                        android:textSize="@dimen/_13sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp">

                        <ImageView
                            android:layout_width="@dimen/_70sdp"
                            android:padding="2dp"
                            android:background="@drawable/circle"
                            android:src="@drawable/ic_person"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_margin="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitStart"
                            android:layout_marginRight="0dp"
                            android:padding="2dp"
                            android:backgroundTint="@color/blue"
                            android:background="@drawable/plus"
                            android:gravity="center"
                            android:minWidth="17sp"
                            android:adjustViewBounds="true"
                            android:minHeight="17sp"
                            android:paddingBottom="1dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="0"
                            android:textColor="#ffffffff"
                            android:textSize="12sp"
                            android:visibility="visible"
                            android:layout_gravity="center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <com.drivingschool.android.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact 2"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextViewMedium"
                        android:textSize="@dimen/_13sdp"/>

                </LinearLayout>


            </LinearLayout>

            <com.skyfishjy.library.RippleBackground
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:id="@+id/rippleBg"
                app:rb_color="#f44a41"
                app:rb_radius="10dp"
                app:rb_rippleAmount="2"
                app:rb_duration="3000"
                app:rb_scale="6"
                android:background="@drawable/circle_trans"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_centerInParent="true"
                    android:id="@+id/centerImage"
                    android:src="@mipmap/ic_alert"/>
            </com.skyfishjy.library.RippleBackground>



            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/tap_above_to_send_a_helpalert"/>

        </LinearLayout>





</RelativeLayout>
